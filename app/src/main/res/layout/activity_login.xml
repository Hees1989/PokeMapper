<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07e2b0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.hees.pokemapper.activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/iv_icon_pokemon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_pokemapper"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/etUsername"
        android:hint="@string/username"
        android:textColorHint="#BBBBBB"
        android:background="@drawable/et_border"
        android:ellipsize="start"
        android:padding="10dp"
        android:layout_below="@+id/iv_icon_pokemon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/icon_username"
        android:backgroundTint="#FFFFFF"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:textColorHint="#BBBBBB"
        android:background="@drawable/et_border"
        android:ellipsize="start"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/icon_password"
        android:backgroundTint="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inloggen"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_border"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registreren"
        android:id="@+id/tvRegister"
        android:layout_alignTop="@+id/btnLogin"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_marginTop="16dp" />
</RelativeLayout>
